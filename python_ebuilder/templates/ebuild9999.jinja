# Ebuild generated by python_ebuilder {{ options.python_ebuilder_version }}
{% if warnings -%}
    {% for warn in warnings %}
    # Warning: {{ warn }}
    {% endfor %}
{%- endif %}

EAPI="5"
[[ ${PV} = *9999* ]] && GIT_ECLASS="{{ options.egit_inherit }}" || GIT_ECLASS=""
{# TODO(NBK): determine which version of python this will work with #}
PYTHON_COMPAT={{ options.python_compat }}

inherit ${GIT_ECLASS} {{ options.inherit|join(" ") }}

{% for value in my_pn %}
MY_PN="{{ value }}"
{% endfor %}
{% for value in my_pv %}
MY_PV="{{ value }}"
{% endfor %}
{% if my_p %}
MY_P="{{ my_p }}"
{% endif %}

DESCRIPTION="{{ options.description }}"
HOMEPAGE="{{ options.homepage }}"

if [[ ${PV} != *9999* ]]; then
	SRC_URI="{{ options.egit_repo_uri }}/tarball/v${PV} -> ${P}.tar.gz"
else
	{{ options.egit_repo }}="{{ options.egit_repo_uri }}"
fi

LICENSE="{{ options.license }}"
KEYWORDS="{{ options.gentoo_keywords }}"
SLOT="{{ options.slot }}"
IUSE="{{ use|join(" ") }}"

{% if options.rdepend %}
RDEPEND="{{ options.rdepend|list|sort|join("\n\t") }}"
{% else %}
RDEPEND="
"
{% endif %}
{% if options.rdepend and options.rdepend == options.depend %}
DEPEND="${RDEPEND}
"
{% elif options.depend %}
DEPEND="${RDEPEND}
{{ options.depend|list|sort|join("\n\t") }}
"
{% endif %}

{% if s %}
S="{{ s }}"
{% endif %}
{% if python_modname %}
PYTHON_MODNAME="{{ python_modname|join(" ") }}"
{% endif %}

{% if docs_dir %}
DOCS={{ docs_dir }}
{% endif %}

{% if examples_dir %}
EXAMPLES={{ examples_dir }}
{% endif %}

#{{ options.realname }}-9999.ebuild

