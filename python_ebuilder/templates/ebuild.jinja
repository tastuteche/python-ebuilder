# Ebuild generated by python_ebuilder {{ options.python_ebuilder_version }}
{% if warnings -%}
    {% for warn in warnings %}
    # Warning: {{ warn }}
    {% endfor %}
{%- endif %}

EAPI="5"

{# TODO(NBK): determine which version of python this will work with #}
PYTHON_COMPAT={{ options.python_compat }}

inherit {{ options.inherit|join(" ") }}

{% for value in my_pn %}
MY_PN="{{ value }}"
{% endfor %}
{% for value in my_pv %}
MY_PV="{{ value }}"
{% endfor %}
{% if my_p %}
MY_P="{{ my_p }}"
{% endif %}

DESCRIPTION="{{ options.description }}"
HOMEPAGE="{{ options.homepage }}"
{% if esvn_repo_uri %}
ESVN_REPO_URI="{{ esvn_repo_uri }}"
{% else %}
{# TODO: SRC_URI="{{ src_uri|join(" ") }}" #}
SRC_URI="{{ options.src_uri|replace_re("https?://pypi.python.org/packages/source/", "mirror://pypi/") }}"
{% endif %}

LICENSE="{{ options.license }}"
KEYWORDS="{{ options.gentoo_keywords }}"
SLOT="{{ slot }}"
IUSE="{{ use|join(" ") }}"

{% if options.depend %}
DEPEND="{{ options.depend|list|sort|join("\n\t") }}"
{% endif %}
{% if options.depend and options.depend == options.rdepend %}
RDEPEND="${DEPEND}"
{% elif options.rdepend %}
RDEPEND="{{ options.rdepend|list|sort|join("\n\t") }}"
{% endif %}

{% if s %}
S="{{ s }}"
{% endif %}
{% if python_modname %}
PYTHON_MODNAME="{{ python_modname|join(" ") }}"
{% endif %}

{% if docs_dir %}
DOCS={{ docs_dir }}
{% endif %}

{% if examples_dir %}
EXAMPLES={{ examples_dir }}
{% endif %}


